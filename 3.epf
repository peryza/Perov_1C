Функция ВерблюжийРегистр(ИсходнаяСтрока) 
	 
	RegExp = Новый COMОбъект("VBScript.RegExp");
	RegExp.Global = Истина; 
	Шаблон = "([а-я0-9])([А-Я0-9])";
	RegExp.Pattern = Шаблон;
	Результат = RegExp.Replace(ИсходнаяСтрока, "$1 $2");
	
 Возврат Результат
 
КонецФункции

